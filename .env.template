# Database
DATABASE_URL=postgres://postgres:password@localhost:5432/medusa

# Redis (Railway'de otomatik set edilir)
REDIS_URL=redis://localhost:6379

# Security (Production'da güvenli secret'lar kullan)
JWT_SECRET=supersecret_change_in_production_32_chars
COOKIE_SECRET=supersecret_change_in_production_32_chars

# CORS (Production'da gerçek URL'leri kullan)
STORE_CORS=http://localhost:8000
ADMIN_CORS=http://localhost:7001
AUTH_CORS=http://localhost:8000,http://localhost:7001

# Railway Deployment Settings
DISABLE_MEDUSA_ADMIN=false
MEDUSA_WORKER_MODE=server
HOST=0.0.0.0
PORT=9000
NODE_ENV=production

# Optional - Email/Notifications
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM=noreply@yourdomain.com